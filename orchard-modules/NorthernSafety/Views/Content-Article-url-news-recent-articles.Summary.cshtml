@using Orchard.Utility.Extensions;
@{
    var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();
}
<article class="content-item @contentTypeClassName">
    <h4><a href="/news/@Display(Model.Slug)">@Display(Model.Title)</a></h4>
    <div class="date">@Display(Model.Meta)</div>
    <div class="articleArchStub">@Display(Html.Raw(Model.ContentItem.BodyPart.Text))</div>
    <div class="articleReadMore">... <a class="readmoreArticles" href="/news/@Display(Model.Slug)">Read Full Article</a></div>
</article>
<div class="ArticlebreakLine"></div>